---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Gaming Headset Comparison - Find Your Perfect Headset</title>
		<meta
			name="description"
			content="Compare gaming headsets by objective specs. Filter by wireless, battery life, compatibility, and more. Find the perfect gaming headset for your needs."
		/>
		<ClientRouter />
	</head>
	<body class="bg-background text-text">
		<nav
			class="bg-black/30 backdrop-blur-md sticky top-0 z-50 border-b border-primary/20"
		>
			<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex items-center justify-between h-16">
					<div class="flex items-center">
						<a
							href="/"
							class="text-xl font-bold text-primary hover:text-primary/80 transition-colors"
						>
							Gaming Headsets
						</a>
					</div>
					<div class="flex items-center space-x-6">
						<a
							href="/find-headsets"
							class="text-text/80 hover:text-text transition-colors"
						>
							Find Your Headset
						</a>
						<a
							href="/blog"
							class="text-text/80 hover:text-text transition-colors"
						>
							Blog
						</a>
					</div>
					<div class="flex items-center space-x-4">
						<button
							class="text-text/80 hover:text-text transition-colors"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								class="w-6 h-6"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
								></path>
							</svg>
						</button>
						<button
							class="text-text/80 hover:text-text transition-colors"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								class="w-6 h-6"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.25 1 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z"
								></path>
							</svg>
						</button>
					</div>
				</div>
			</div>
		</nav>
		<slot />
		<style is:global>
			@keyframes fade-in {
				from { opacity: 0; }
				to { opacity: 1; }
			}
			
			@keyframes slide-up {
				from {
					opacity: 0;
					transform: translateY(20px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
			
			@keyframes slide-down {
				from {
					opacity: 0;
					transform: translateY(-20px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
			
			::view-transition-old(root),
			::view-transition-new(root) {
				animation-duration: 0.4s;
			}
			
			@supports (view-transition-name: none) {
				img[transition^="post-image"],
				h1[transition^="post-title"],
				h2[transition^="post-title"],
				h4[transition^="post-title"] {
					view-transition-name: attr(transition);
				}
			}
		</style>
	</body>
</html>
