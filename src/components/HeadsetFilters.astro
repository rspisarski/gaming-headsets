      <!-- View Toggle Buttons -->
      <div class="flex items-center gap-1 bg-gray-800 rounded-lg p-1">
        <button
          id="grid-view-btn"
          class="view-toggle-btn px-3 py-2 rounded-md text-sm font-medium transition-colors bg-primary text-white"
