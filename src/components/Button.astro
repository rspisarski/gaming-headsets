---
interface Props {
	variant?: "primary" | "secondary";
	size?: "sm" | "md" | "lg";
	type?: "button" | "submit" | "reset";
	disabled?: boolean;
	class?: string;
	id?: string;
}

const {
	variant = "primary",
	size = "md",
	type = "button",
	disabled = false,
	class: className = "",
	id,
	...rest
} = Astro.props;

const baseClasses =
	"font-semibold rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-black disabled:opacity-50 disabled:cursor-not-allowed";

const variantClasses = {
	primary: "bg-primary text-black hover:bg-primary/80 active:bg-primary/90",
	secondary: "bg-white text-black hover:bg-gray-100 active:bg-gray-200",
};

const sizeClasses = {
	sm: "px-3 py-1.5 text-sm",
	md: "px-4 py-2 text-base",
	lg: "px-8 py-3 text-lg",
};
---

<button
	type={type}
	disabled={disabled}
	id={id}
	class={`${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`}
	{...rest}
>
	<slot />
</button>
