---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort((a, b) => b.id.localeCompare(a.id));

const featuredPost: CollectionEntry<"blog"> | undefined =
  sortedPosts.find((post) => post.data.featured) || sortedPosts[0];
const listPosts = sortedPosts
  .filter((post) => post.slug !== featuredPost?.slug)
  .slice(0, 5);

const formatDate = (post: CollectionEntry<"blog">) => {
  const date = new Date(post.data.published || post.id);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<section class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    {
      featuredPost && (
        <div class="lg:sticky lg:top-20 lg:self-start relative z-10 hover:z-0">
          <a
            href={`/blog/${featuredPost.slug}`}
            class="block bg-card-bg hover:bg-card-bg/90 relative z-10 hover:z-0 transition-all duration-300 overflow-hidden hover:shadow-[0_0_80px_rgba(139,213,27,0.4)]"
          >
            <div class="aspect-video relative">
              <img
                src={featuredPost.data.image}
                alt={featuredPost.data.title}
                class="w-full h-full object-cover"
                loading="eager"
                transition:name={`post-image-${featuredPost.slug}`}
              />
            </div>
            <div class="p-8">
              <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1 text-xs font-semibold bg-primary/20 text-primary rounded-full uppercase tracking-wide">
                  {featuredPost.data.category}
                </span>
                <span class="text-text/60 text-sm">
                  {formatDate(featuredPost)}
                </span>
              </div>
              <h2 class="text-3xl font-bold text-text hover:text-primary transition-colors mb-4">
                {featuredPost.data.title}
              </h2>
              <p class="text-text/70 text-lg leading-relaxed line-clamp-3">
                {featuredPost.data.excerpt}
              </p>
            </div>
          </a>
        </div>
      )
    }

    <div class="space-y-4 relative z-10 hover:z-0">
      {
        listPosts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="block bg-card-bg hover:bg-card-bg/90 relative z-10 hover:z-0 transition-all duration-300 p-4 hover:shadow-[0_0_80px_rgba(139,213,27,0.4)]"
          >
            <div class="flex items-start gap-4">
              <div class="w-16 h-16 flex-shrink-0">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                  transition:name={`post-image-${post.slug}`}
                />
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <span class="text-xs font-semibold text-primary uppercase tracking-wide">
                    {post.data.category}
                  </span>
                  <span class="text-text/60 text-xs">â€¢ {formatDate(post)}</span>
                </div>
                <h4 class="text-base font-semibold text-text hover:text-primary transition-colors line-clamp-1">
                  {post.data.title}
                </h4>
                <p class="text-text/70 text-sm line-clamp-2">
                  {post.data.excerpt}
                </p>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
