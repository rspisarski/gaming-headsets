---
interface Props {
    label: string;
    value: string;
    name: string;
    groupClass?: string;
    dataCategory?: string;
}

const { label, value, name, groupClass = "", dataCategory } = Astro.props;
---

<label class="flex items-center gap-3 cursor-pointer group py-1">
    <div class="relative flex items-center">
        <input
            type="radio"
            name={name}
            value={value}
            class:list={["peer sr-only", groupClass]}
            data-category={dataCategory}
        />
        <div
            class="w-5 h-5 rounded-full border border-gray-600 bg-black/50 transition-all duration-200 peer-focus:ring-2 peer-focus:ring-primary/50 peer-checked:border-primary peer-checked:shadow-[0_0_8px_rgba(139,213,27,0.3)] flex items-center justify-center group-hover:border-primary/70"
        >
            <div
                class="w-2.5 h-2.5 rounded-full bg-primary opacity-0 peer-checked:opacity-100 transition-opacity duration-200"
            >
            </div>
        </div>
    </div>
    <span
        class="text-text/70 group-hover:text-text text-sm select-none transition-colors"
    >
        {label}
    </span>
</label>
