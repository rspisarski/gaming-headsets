---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const headsets = await getCollection("headsets");
  return headsets.map((headset) => ({
    params: { slug: headset.slug },
    props: { headset },
  }));
}

const { headset } = Astro.props;
const { Content } = await headset.render();

// Derive wireless/wired from connection_types
const isWireless = headset.data.connection_types.some(
  (type) => type === "2.4GHz Wireless" || type === "Bluetooth",
);
const isWired = headset.data.connection_types.some(
  (type) => type === "3.5mm" || type === "USB-A" || type === "USB-C",
);

// Get related headsets (same brand or similar price range)
const allHeadsets = await getCollection("headsets");
const relatedHeadsets = allHeadsets
  .filter((h) => h.slug !== headset.slug)
  .filter(
    (h) =>
      h.data.brand === headset.data.brand ||
      Math.abs(h.data.price - headset.data.price) <= 50,
  )
  .slice(0, 3);
---

<Layout>
  <div class="min-h-screen bg-dark-bg">
    <header class="bg-dark-surface border-b border-dark-border shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <nav class="flex items-center space-x-4 text-sm">
          <a
            href="/"
            class="text-blue-400 hover:text-blue-300 transition-colors"
            >All Headsets</a
          >
          <span class="text-dark-text-muted">/</span>
          <span class="text-dark-text-secondary">{headset.data.name}</span>
        </nav>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Product Header -->
          <div
            class="bg-dark-card rounded-lg shadow-md p-6 mb-6 border border-dark-border"
          >
            <div class="flex flex-col md:flex-row gap-6">
              <div
                class="w-full md:w-80 h-80 bg-dark-surface rounded-lg overflow-hidden flex-shrink-0"
              >
                <img
                  src={headset.data.image}
                  alt={`${headset.data.brand} ${headset.data.name} gaming headset`}
                  class="w-full h-full object-cover"
                  transition:name={`headset-${headset.slug}`}
                />
              </div>

              <div class="flex-1">
                <h1 class="text-3xl font-bold text-dark-text-primary mb-2">
                  {headset.data.name}
                </h1>
                <p class="text-lg text-dark-text-secondary mb-4">
                  {headset.data.brand}
                </p>

                <div class="flex flex-wrap gap-2 mb-6">
                  {
                    isWireless && (
                      <span class="px-3 py-1 bg-blue-900/40 text-blue-300 text-sm rounded-full border border-blue-700/50">
                        Wireless
                      </span>
                    )
                  }
                  {
                    headset.data.battery_life && (
                      <span class="px-3 py-1 bg-green-900/40 text-green-300 text-sm rounded-full border border-green-700/50">
                        {headset.data.battery_life}h Battery
                      </span>
                    )
                  }
                  {
                    headset.data.weight && (
                      <span class="px-3 py-1 bg-gray-700/40 text-gray-300 text-sm rounded-full border border-gray-600/50">
                        {headset.data.weight}g
                      </span>
                    )
                  }
                  <span
                    class="px-3 py-1 bg-purple-900/40 text-purple-300 text-sm rounded-full border border-purple-700/50"
                    >{headset.data.microphone_type}</span
                  >
                </div>

                <div class="text-3xl font-bold text-green-400 mb-6">
                  ${headset.data.price}
                </div>

                <!-- Affiliate Links -->
                <div class="space-y-3">
                  <h3 class="font-semibold text-dark-text-primary">
                    Buy From Retailers:
                  </h3>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    {
                      headset.data.amazon_us && (
                        <a
                          href={headset.data.amazon_us}
                          target="_blank"
                          rel="noopener noreferrer nofollow"
                          class="inline-flex items-center justify-center px-4 py-2 bg-orange-500 text-white rounded-md hover:bg-orange-600 transition-colors"
                        >
                          Buy on Amazon
                        </a>
                      )
                    }
                    {
                      headset.data.bestbuy && (
                        <a
                          href={headset.data.bestbuy}
                          target="_blank"
                          rel="noopener noreferrer nofollow"
                          class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
                        >
                          Buy on Best Buy
                        </a>
                      )
                    }
                    {
                      headset.data.newegg && (
                        <a
                          href={headset.data.newegg}
                          target="_blank"
                          rel="noopener noreferrer nofollow"
                          class="inline-flex items-center justify-center px-4 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition-colors"
                        >
                          Buy on Newegg
                        </a>
                      )
                    }
                    <a
                      href={headset.data.manufacturer_url}
                      target="_blank"
                      rel="noopener noreferrer nofollow"
                      class="inline-flex items-center justify-center px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 transition-colors"
                    >
                      Manufacturer
                    </a>
                  </div>
                  <p class="text-xs text-dark-text-muted">
                    <strong>Affiliate Disclosure:</strong> As an Amazon Associate,
                    we earn from qualifying purchases. This helps support our site
                    at no extra cost to you.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Product Description -->
          <div
            class="bg-dark-card rounded-lg shadow-md p-6 mb-6 border border-dark-border prose prose-invert prose-headings:text-dark-text-primary prose-p:text-dark-text-secondary prose-a:text-blue-400 max-w-none"
          >
            <Content />
          </div>

          <!-- Specifications Table -->
          <div
            class="bg-dark-card rounded-lg shadow-md p-6 border border-dark-border"
          >
            <h2 class="text-2xl font-bold text-dark-text-primary mb-4">
              Technical Specifications
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="space-y-3">
                <div
                  class="flex justify-between py-2 border-b border-dark-border"
                >
                  <span class="font-medium text-dark-text-primary"
                    >Connectivity</span
                  >
                  <span class="text-dark-text-secondary"
                    >{headset.data.connection_types.join(", ")}</span
                  >
                </div>
                <div
                  class="flex justify-between py-2 border-b border-dark-border"
                >
                  <span class="font-medium text-dark-text-primary"
                    >Wireless</span
                  >
                  <span class="text-dark-text-secondary"
                    >{isWireless ? "Yes" : "No"}</span
                  >
                </div>
                <div
                  class="flex justify-between py-2 border-b border-dark-border"
                >
                  <span class="font-medium text-dark-text-primary">Wired</span>
                  <span class="text-dark-text-secondary"
                    >{isWired ? "Yes" : "No"}</span
                  >
                </div>
                {
                  headset.data.battery_life && (
                    <div class="flex justify-between py-2 border-b border-dark-border">
                      <span class="font-medium text-dark-text-primary">
                        Battery Life
                      </span>
                      <span class="text-dark-text-secondary">
                        {headset.data.battery_life} hours
                      </span>
                    </div>
                  )
                }
                {
                  headset.data.weight && (
                    <div class="flex justify-between py-2 border-b border-dark-border">
                      <span class="font-medium text-dark-text-primary">
                        Weight
                      </span>
                      <span class="text-dark-text-secondary">
                        {headset.data.weight} grams
                      </span>
                    </div>
                  )
                }
                {
                  headset.data.driver_size && (
                    <div class="flex justify-between py-2 border-b border-dark-border">
                      <span class="font-medium text-dark-text-primary">
                        Driver Size
                      </span>
                      <span class="text-dark-text-secondary">
                        {headset.data.driver_size}mm
                      </span>
                    </div>
                  )
                }
                {
                  headset.data.driver_type && (
                    <div class="flex justify-between py-2 border-b border-dark-border">
                      <span class="font-medium text-dark-text-primary">
                        Driver Type
                      </span>
                      <span class="text-dark-text-secondary">
                        {headset.data.driver_type}
                      </span>
                    </div>
                  )
                }
              </div>

              <div class="space-y-3">
                <div
                  class="flex justify-between py-2 border-b border-dark-border"
                >
                  <span class="font-medium text-dark-text-primary"
                    >Surround Sound</span
                  >
                  <span class="text-dark-text-secondary"
                    >{headset.data.surround_sound}</span
                  >
                </div>
                {
                  headset.data.frequency_response && (
                    <div class="flex justify-between py-2 border-b border-dark-border">
                      <span class="font-medium text-dark-text-primary">
                        Frequency Response
                      </span>
                      <span class="text-dark-text-secondary">
                        {headset.data.frequency_response}
                      </span>
                    </div>
                  )
                }
                {
                  headset.data.impedance && (
                    <div class="flex justify-between py-2 border-b border-dark-border">
                      <span class="font-medium text-dark-text-primary">
                        Impedance
                      </span>
                      <span class="text-dark-text-secondary">
                        {headset.data.impedance}Î©
                      </span>
                    </div>
                  )
                }
                <div
                  class="flex justify-between py-2 border-b border-dark-border"
                >
                  <span class="font-medium text-dark-text-primary"
                    >Microphone</span
                  >
                  <span class="text-dark-text-secondary"
                    >{headset.data.microphone_type}</span
                  >
                </div>
                <div
                  class="flex justify-between py-2 border-b border-dark-border"
                >
                  <span class="font-medium text-dark-text-primary"
                    >Detachable Mic</span
                  >
                  <span class="text-dark-text-secondary"
                    >{headset.data.mic_detachable ? "Yes" : "No"}</span
                  >
                </div>
                <div
                  class="flex justify-between py-2 border-b border-dark-border"
                >
                  <span class="font-medium text-dark-text-primary"
                    >Platform Support</span
                  >
                  <span class="text-dark-text-secondary"
                    >{headset.data.platforms.join(", ")}</span
                  >
                </div>
                {
                  headset.data.build_material && (
                    <div class="flex justify-between py-2 border-b border-dark-border">
                      <span class="font-medium text-dark-text-primary">
                        Build Material
                      </span>
                      <span class="text-dark-text-secondary">
                        {headset.data.build_material}
                      </span>
                    </div>
                  )
                }
              </div>
            </div>

            <!-- Features -->
            <div class="mt-6 pt-6 border-t border-dark-border">
              <h3 class="font-semibold text-dark-text-primary mb-3">
                Features
              </h3>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                <div class="flex items-center">
                  <span
                    class={`w-3 h-3 rounded-full mr-2 ${headset.data.active_features?.includes("Active Noise Cancellation") ? "bg-green-500" : "bg-gray-600"}`}
                  ></span>
                  <span class="text-sm text-dark-text-secondary"
                    >Active Noise Cancellation</span
                  >
                </div>
                <div class="flex items-center">
                  <span
                    class={`w-3 h-3 rounded-full mr-2 ${headset.data.rgb_lighting && headset.data.rgb_lighting !== "No Lighting" ? "bg-green-500" : "bg-gray-600"}`}
                  ></span>
                  <span class="text-sm text-dark-text-secondary"
                    >RGB Lighting</span
                  >
                </div>
                <div class="flex items-center">
                  <span
                    class={`w-3 h-3 rounded-full mr-2 ${headset.data.comfort_features?.includes("Replaceable Ear Pads") ? "bg-green-500" : "bg-gray-600"}`}
                  ></span>
                  <span class="text-sm text-dark-text-secondary"
                    >Replaceable Earpads</span
                  >
                </div>
                <div class="flex items-center">
                  <span
                    class={`w-3 h-3 rounded-full mr-2 ${headset.data.mic_features?.includes("Sidetone") ? "bg-green-500" : "bg-gray-600"}`}
                  ></span>
                  <span class="text-sm text-dark-text-secondary">Sidetone</span>
                </div>
                {
                  headset.data.has_software && (
                    <div class="flex items-center">
                      <span class="w-3 h-3 rounded-full mr-2 bg-green-500" />
                      <span class="text-sm text-dark-text-secondary">
                        Software Support
                      </span>
                    </div>
                  )
                }
                {
                  headset.data.special_features?.includes("Game/Chat Mix") && (
                    <div class="flex items-center">
                      <span class="w-3 h-3 rounded-full mr-2 bg-green-500" />
                      <span class="text-sm text-dark-text-secondary">
                        Game/Chat Mix
                      </span>
                    </div>
                  )
                }
              </div>
            </div>

            <!-- Software Info -->
            {
              headset.data.has_software && headset.data.software_name && (
                <div class="mt-6 pt-6 border-t border-dark-border">
                  <h3 class="font-semibold text-dark-text-primary mb-2">
                    Software
                  </h3>
                  <p class="text-dark-text-secondary mb-2">
                    {headset.data.software_name}
                  </p>
                  {headset.data.software_features &&
                    headset.data.software_features.length > 0 && (
                      <div class="flex flex-wrap gap-2">
                        {headset.data.software_features.map((feature) => (
                          <span class="px-2 py-1 bg-blue-900/30 text-blue-300 text-xs rounded">
                            {feature}
                          </span>
                        ))}
                      </div>
                    )}
                </div>
              )
            }

            <!-- Certifications -->
            {
              headset.data.certifications &&
                headset.data.certifications.length > 0 && (
                  <div class="mt-6 pt-6 border-t border-dark-border">
                    <h3 class="font-semibold text-dark-text-primary mb-2">
                      Certifications
                    </h3>
                    <div class="flex flex-wrap gap-2">
                      {headset.data.certifications.map((cert) => (
                        <span class="px-2 py-1 bg-green-900/30 text-green-300 text-xs rounded border border-green-700/50">
                          {cert}
                        </span>
                      ))}
                    </div>
                  </div>
                )
            }
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Quick Actions -->
          <div
            class="bg-dark-card rounded-lg shadow-md p-6 mb-6 border border-dark-border"
          >
            <h3 class="font-semibold text-dark-text-primary mb-4">
              Quick Actions
            </h3>
            <div class="space-y-3">
              <button
                id="favorite-button"
                class="w-full px-4 py-2 border border-dark-border rounded-md hover:bg-dark-surface transition-colors flex items-center justify-center gap-2 text-dark-text-primary"
                data-headset-slug={headset.slug}
              >
                <svg
                  class="w-5 h-5 text-dark-text-muted favorite-icon hover:text-red-400 transition-colors"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  ></path>
                </svg>
                <span>Add to Favorites</span>
              </button>
              <a
                href="/"
                class="block w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors text-center"
              >
                Back to Headsets
              </a>
            </div>
          </div>

          <!-- Related Headsets -->
          {
            relatedHeadsets.length > 0 && (
              <div class="bg-dark-card rounded-lg shadow-md p-6 border border-dark-border">
                <h3 class="font-semibold text-dark-text-primary mb-4">
                  Related Headsets
                </h3>
                <div class="space-y-4">
                  {relatedHeadsets.map((related) => (
                    <div class="flex items-center gap-3">
                      <div class="w-16 h-16 bg-dark-surface rounded-lg overflow-hidden flex-shrink-0">
                        <img
                          src={related.data.image}
                          alt={`${related.data.brand} ${related.data.name}`}
                          class="w-full h-full object-cover"
                        />
                      </div>
                      <div class="flex-1">
                        <h4 class="font-medium text-dark-text-primary text-sm">
                          {related.data.name}
                        </h4>
                        <p class="text-xs text-dark-text-secondary">
                          {related.data.brand}
                        </p>
                        <p class="text-sm font-semibold text-green-400">
                          ${related.data.price}
                        </p>
                      </div>
                      <a
                        href={`/headsets/${related.slug}`}
                        class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 transition-colors"
                      >
                        View
                      </a>
                    </div>
                  ))}
                </div>
              </div>
            )
          }
        </div>
      </div>
    </main>
  </div>

  <script>
    // Initialize favorites functionality
    function initFavorites() {
      let favorites =
        JSON.parse(localStorage.getItem("headsetFavorites") || "[]") || [];
      const favoriteButton = document.getElementById("favorite-button");
      const headsetSlug = favoriteButton?.dataset.headsetSlug || "";

      function updateFavoriteButton() {
        if (!favoriteButton) return;

        const isFavorite = favorites.includes(headsetSlug);
        const icon = favoriteButton.querySelector(".favorite-icon");
        const text = favoriteButton.querySelector("span");

        if (isFavorite) {
          favoriteButton.classList.add("bg-red-900/30", "border-red-600");
          if (icon) {
            icon.classList.remove("text-dark-text-muted");
            icon.classList.add("text-red-400");
            icon.setAttribute("fill", "currentColor");
          }
          if (text) text.textContent = "Remove from Favorites";
        } else {
          favoriteButton.classList.remove("bg-red-900/30", "border-red-600");
          if (icon) {
            icon.classList.add("text-dark-text-muted");
            icon.classList.remove("text-red-400");
            icon.setAttribute("fill", "none");
          }
          if (text) text.textContent = "Add to Favorites";
        }
      }

      favoriteButton?.addEventListener("click", function () {
        const index = favorites.indexOf(headsetSlug);
        if (index > -1) {
          favorites.splice(index, 1);
        } else {
          favorites.push(headsetSlug);
        }
        localStorage.setItem("headsetFavorites", JSON.stringify(favorites));
        updateFavoriteButton();
      });

      updateFavoriteButton();
    }

    // Initialize on page load
    document.addEventListener("DOMContentLoaded", initFavorites);

    // Re-initialize after View Transitions
    document.addEventListener("astro:page-load", initFavorites);
  </script>
</Layout>
