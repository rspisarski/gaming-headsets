---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Prose from "../../components/Prose.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const allPosts = await getCollection("blog");
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug && p.data.category === post.data.category)
  .slice(0, 4);

const formatDate = () => {
  const date = new Date(post.data.published || post.id);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<Layout
  title={post.data.seo_title || `${post.data.title} - Goop Finder`}
  description={post.data.seo_description || post.data.excerpt}
  image={post.data.image}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <div class="aspect-[4/3] w-full mb-8 overflow-hidden">
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-full object-cover"
          loading="eager"
          transition:name={`post-image-${post.slug}`}
        />
      </div>

      <div class="flex items-center gap-3 mb-4">
        <span
          class="px-4 py-2 text-sm font-semibold bg-primary/20 text-primary rounded-full uppercase tracking-wide"
        >
          {post.data.category}
        </span>
        <span class="text-text/60">{formatDate()}</span>
      </div>

      <h1
        transition:name={`post-title-${post.slug}`}
        class="text-4xl md:text-5xl font-bold text-text mb-6"
      >
        {post.data.title}
      </h1>

      <p class="text-text/80 text-xl leading-relaxed mb-8">
        {post.data.excerpt}
      </p>

      <Prose>
        <Content />
      </Prose>
    </div>

    {
      relatedPosts.length > 0 && (
        <section class="mt-16 pt-8 border-t border-gray-800">
          <h2 class="text-2xl font-bold text-text mb-6">Related Posts</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {relatedPosts.map((related) => (
              <a
                href={`/blog/${related.slug}`}
                class="block bg-card-bg hover:bg-card-bg/90 relative z-0 hover:z-10 transition-all duration-300 p-6 hover:shadow-[0_0_80px_rgba(139,213,27,0.4)]"
              >
                <div class="flex flex-col gap-4">
                  <div class="aspect-video w-full overflow-hidden">
                    <img
                      src={related.data.image}
                      alt={related.data.title}
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  </div>
                  <div>
                    <div class="flex items-center gap-2 mb-2">
                      <span class="text-xs font-semibold text-primary uppercase tracking-wide">
                        {related.data.category}
                      </span>
                    </div>
                    <h3 class="text-lg font-semibold text-text hover:text-primary transition-colors line-clamp-2">
                      {related.data.title}
                    </h3>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      )
    }
  </article>
</Layout>
