---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Button from "../../components/Button.astro";

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort((a, b) => b.id.localeCompare(a.id));

const formatDate = (post: CollectionEntry<"blog">) => {
  const date = new Date(post.data.published || post.id);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<Layout>
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-text mb-12 text-center">Blog</h1>

    <div class="grid grid-cols-1 gap-6" id="blog-posts" class="relative">
      {
        sortedPosts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="block bg-card-bg hover:bg-card-bg/90 relative z-10 hover:z-0 transition-all duration-300 p-6 hover:shadow-[0_0_80px_rgba(139,213,27,0.4)]"
          >
            <div class="flex flex-col md:flex-row gap-6">
              <div class="md:w-64 aspect-video md:aspect-auto flex-shrink-0">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                  transition:name={`post-image-${post.slug}`}
                />
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-3">
                  <span class="px-3 py-1 text-xs font-semibold bg-primary/20 text-primary rounded-full uppercase tracking-wide">
                    {post.data.category}
                  </span>
                  <span class="text-text/60 text-sm">{formatDate(post)}</span>
                </div>
                <h2 class="text-2xl font-bold text-text hover:text-primary transition-colors mb-3 line-clamp-2">
                  {post.data.title}
                </h2>
                <p class="text-text/70 text-base line-clamp-3">
                  {post.data.excerpt}
                </p>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <div class="mt-12 flex justify-center">
      <Button size="lg" id="load-more">
        Load More
      </Button>
    </div>
  </div>
  <script src="/scripts/blog.js" is:inline></script>
</Layout>
